{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "MCF APIs",
  "colors": {
    "primary": "#27509B",
    "light": "#FCE500",
    "dark": "#00205B"
  },
  "fonts": {
    "family": "Open Sans"
  },
  "icons": {
    "library": "lucide"
  },
  "favicon": "/favicon-michelin.png",
  "appearance": {
    "default": "light",
    "strict": true
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "index",
              "quickstart",
              "contact"
            ]
          },
          {
            "group": "Essentials",
            "pages": [
              "essentials/restAPI",
              "essentials/authentication",
              {
                "group": "Requests",
                "icon": "map",
                "pages": [
                  "essentials/requestMethods",
                  "essentials/requestResponseCodes"
                ]
              },
              "essentials/datetime",
              "essentials/pagination",
              {
                "group": "Quotas, limits & misc",
                "icon": "map",
                "pages": [
                  "essentials/quotas",
                  "essentials/latest",
                  "essentials/versions"
                ]
              }
            ]
          },
          {
            "group": "Solution concepts",
            "expanded": false,
            "pages": [
              "solution/overview",
              {
                "group": "Resources",
                "icon": "truck",
                "pages": [
                  "solution/vehicles",
                  "solution/drivers",
                  "solution/group",
                  "solution/tags"
                ]
              },
              {
                "group": "Track & trace",
                "icon": "route",
                "pages": [
                  "solution/tracking",
                  "solution/journey",
                  "solution/distance",
                  "solution/privacy",
                  "solution/inputs",
                  "solution/advancedinputs"
                ]
              },
              {
                "group": "Locations (POIs)",
                "icon": "map-pin",
                "pages": [
                  "solution/locations",
                  "solution/locationtypes",
                  "solution/locationaddressses",
                  "solution/locationicons"
                ]
              },
              {
                "group": "Driving performance",
                "icon": "award",
                "pages": [
                  "solution/driverperformance",
                  "solution/idling",
                  "solution/speeding",
                  "solution/driverBehaviour",
                  "solution/ecoDrive"
                ]
              },
              {
                "group": "Alerting",
                "icon": "bell",
                "pages": [
                  "solution/alerts"
                ]
              },
              {
                "group": "Users",
                "icon": "user",
                "pages": [
                  "solution/users",
                  "solution/language",
                  "solution/units",
                  "solution/timezone",
                  "solution/passwords",
                  "solution/singleSignOn"
                ]
              }
            ]
          },
          {
            "group": "Common use cases",
            "pages": [
              "useCase/useCase1poi",
              "useCase/useCase2odo"
            ]
          }
        ]
      },
      {
        "tab": "Core APIs",
        "groups": [
          {
            "group": "API Documentation",
            "openapi": "api-reference/openapi.json"
          },
          {
            "group": "Endpoint Examples",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/light.png",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Login to myCF",
      "href": "https://login.connectedfleet.michelin.com/"
    }
  },
  "footer": {
    "socials": {
      "x": "https://twitter.com/MichelinFleet",
      "facebook": "https://www.facebook.com/MichelinConnectedFleet",
      "linkedin": "https://www.linkedin.com/company/michelin-connected-fleet-global/"
    }
  }
}